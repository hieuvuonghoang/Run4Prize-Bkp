@using Run4Prize.Constants;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Run4Prize</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Run4Prize.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Run4Prize</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (!User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="@ViewData[ConstantDomains.UrlCallBackStrava]">Kết nôi Strava</a>
                            </li>
                        } else
                        {
                            <li class="nav-item">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="SyncActivity">Đồng bộ dữ liệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LogOut">Đăng xuất</a>
                            </li>
                        }
                    </ul>
                </div>

                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Run4Prize</a>
                <ul class="navbar-nav" style="margin-left: auto !important;">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @if (!User.Identity!.IsAuthenticated)
                            {
                                <img src="https://vietrace365.com.vn/uploads/f_651083eda7b1e1ad6d2e2e55/ae314439fcdf24ae6bf9a3b89.png?w=500" class="shadow-sm bg-white rounded" width="140" height="50">
                            }
                            else
                            {
                                <img src="@ViewData[ConstantDomains.UrlUserAvatar]" width="40" height="40" class="rounded-circle shadow-sm bg-white rounded">
                            }
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a class="dropdown-item" href="@ViewData[ConstantDomains.UrlCallBackStrava]">Kết nối với Strava</a>
                            }
                            else
                            {
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="SyncActivity">Đồng bộ dữ liệu</a>
